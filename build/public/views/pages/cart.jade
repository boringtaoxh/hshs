#cart.container.main-container.headerOffset.globalPaddingBottom(ng-controller='productsCtrl')
  .row
    .col-lg-12.col-md-12.col-sm-12
      .cartContent.w100
        table.cartTable.table-responsive(style='width:100%')
          tbody
            tr.CartProduct.cartTableHeader
              td.selective.text-left(style='width:6.5%;')
                i.unselect
                span 全选
              td(style='width:22%') 商品
              td(style='width:14.5%') 商品信息
              td(style='width:12.8%') 数量
              td(style='width:15.3%') 单价
              td(style='width:14.5%') 优惠
              td 操作
            tr.CartProduct(ng-repeat='product in products | limitTo:twoItem' )
              td.selective
                i.select
              td.CartProductThumb
                a.pull-left(href='product-details.html')
                  img(data-src='holder.js/86x115')
                h4.title
                  span.grey {{product.designer}}
                  br
                  a(href='product-details.html') Product-{{product.id}}
              td
                .CartDescription
                  span.size 尺码：XL
              td
                input.quanityChooser(type='text', value='2', name='quanityChooser')
              td.price {{product.price}}
              td
              td.Delete.op
                a.Collect.op
                  i.glyphicon.glyphicon-star-empty
                  | 收藏
                br
