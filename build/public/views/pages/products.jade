#products(ng-controller='productsCtrl')
  .container.main-container.headerOffset.globalPaddingBottom
    .row
      include ../partials/product-sidebar
      #center_column.col-xs-12.col-sm-9
        .mb-30.mt-10
          img.img-responsive(data-src='holder.js/848x299')
        ul.product_list.grid.row
          li.ajax_block_product.col-xs-12.col-sm-6.col-md-4(ng-repeat='product in products')
            .product-container.style3.clearfix(itemscope='', itemtype='')
              .left-block
                .product-image-container
                  .vel-image-more(data-idproduct='1')
                    a(href='#', title='')
                      img.img-responsive(data-src='holder.js/260x347')
                  a.product_img_link(href='#', title='', itemprop='url')
                    img.img-responsive(data-src='holder.js/260x347', alt='', title='', itemprop='image')
                  .content_price.price_prefix(itemprop='offers', itemscope='')
                    span.price.product-price(itemprop='price', itemscope='')  ￥{{product.price}}
                    span.old-price.product-price  ￥{{product.price}}
              .right-block
                h5(itemprop='name')
                  a.product-name(href='#', title='Product-{{product.id}}')  Product-{{product.id}}
                .comments_note.clearfix
                  .text-center
                    | {{product.designer}}
                  .price
                    span.price.product-price  {{product.price}}
                    span.old-price.product-price  {{product.price}}
                  .button-container.clearfix
                    a.addToWishlist.text-center(href='#')
                      i.fa.fa-heart-o
                    a.button.ajax_add_to_cart_button.text-center(href='#')
                      i.fa.fa-shopping-cart
        .row.mb-30.mt-30.text-center
          pagination.pagination-sm(total-items='bigTotalItems', ng-model='bigCurrentPage', max-size='maxSize',boundary-links='true', previous-text="‹", next-text="›", first-text="«", last-text="»")