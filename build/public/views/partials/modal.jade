              a(href='#', data-toggle='modal', data-target='#ModalLogin' data-dismiss="modal" aria-label="Close") 登录
          form(action='')
            div
              input(type='text', name='', placeholder='请输入用户名', id='')
            div
              input(type='text', name='', placeholder='请输入手机号码', id='')
            .verify
              input(type='text', name='', placeholder='请输入短信验证码', id='')
              button.btn.btn-transparent 获取验证码
            div
              input(type='text', name='', placeholder='请输入密码', id='')
            div
              input(type='text', name='', placeholder='请重复输入您的密码', id='')
            div
              input(type='text', name='', placeholder='请输入邀请码', id='')
            input.btn.btn-dark(type='submit', value='注册')
            a(href='#' data-dismiss="modal" aria-label="Close")
              input.btn.btn-grey(type='submit', value='取消' style="margin-top:10px;")
